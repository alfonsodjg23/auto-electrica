<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Rodeza" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/bar</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="bottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/bottonnavigation</item>
        <item name="itemTextColor">@color/bottonBajo</item>
    </style>
</resources>